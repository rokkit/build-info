<%= link_to "Записаться на просмотр", new_review_path(build_object:@build_object) if can? :request_review, @build_object %>
<p id="notice"><%= notice %></p>
<p>
	<b>Фотографии</b>
  <ul class="gallery">
	<% @build_object.photos.each do |photo|%>
		<li><%= image_tag photo.image_url(:main).to_s %></li>
	<% end %>
  </ul>
</p>
<%= image_tag "http://maps.google.com/maps/api/staticmap?size=450x300&sensor=false&zoom=16&markers=#{@build_object.address.lat}%2C#{@build_object.address.lng}" %>
