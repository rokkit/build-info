<% content_for :page_title do %>Карточка объекта<% end %>
<% content_for :top_block do %>
<div class="row">
    <div class="large-7 columns">
        <h4>Адрес: <%= @build_object.address %> <%= link_to "Печать",url_for(:controller=>:build_objects, :action=>:show, :format=>:pdf, :id => @build_object.id) , format: :pdf %></h4>
        <%= %>
    </div>
    <div class="large-4 columns">
        <% if @build_object.selled_at.blank? %>
          <h4 class="price">Цена: <%= number_to_currency @build_object.price %></h4>
        <% else %>
          <h4 class="sold">Продано!</h4>
        <% end %>
    </div>
</div>
<% end %>

<div class="row">

