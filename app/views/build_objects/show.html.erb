        <% end %>
      </td>
    </tr>
  </tbody>
</table>

<% unless @build_object.description.nil? %>
  <table width="100%" class="selling details">
    <thead>
      <tr>
        <th>Условия продажи</th>
      </tr>
    </thead>
    <tbody>
      <tr>
        <td><%= @build_object.description %></td>
      </tr>
    </tbody>
  </table>
<% end %>

<dl class="obj-contact details">
<% unless @build_object.user.nil? %>
  <dt>Контакты</dt>
  <dd><%= @build_object.user %></dd>
  <dd>+7 (921) 123-42-42</dd>
  <dd><a href="mailto:<%= @build_object.user.email %>"><%= @build_object.user.email %></a></dd>
<% end %>
</dl>

