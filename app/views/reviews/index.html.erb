<h1>Записи на просмотр</h1>
<h3>Входящие</h3>
<table>
  <tr>
      <th>Дата</th>
      <th>Объект</th>
      <th>Статус</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reviews.each do |review| %>
  <tr>
      <td><%= review.date %></td>
      <td><%= review.build_object %></td>
      <td><%= status review.status %></td>
    <td><%= link_to 'Show', review %></td>
        <td><%= link_to 'Edit', edit_review_path(review) %></td>
        <td><%= link_to 'Destroy', review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>

</table>

