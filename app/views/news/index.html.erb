<% content_for :page_title do %>Новости<% end %>

<% @news.each do |news| %>
  <article>
    <h2><%= news.name %></h2>
    <p class="user-date"><%= news.user %></p>
    <div class="content"><%= truncate news.content, lenght: 200 %></div>
    <p class="read-more btn"><%= link_to 'Подробнее', news %></p>
		<% if can? :update, news %>
    		<div class="edit">
          <p><%= link_to 'Редактировать', edit_news_path(news) %> / 
      		<%= link_to 'Удалить', news, method: :delete, data: { confirm: 'Вы уверены?' } %></p>
        </div>
		<% end %>
  </article>
<% end %>

<%= link_to "Добавить новость", new_news_path if current_user.present? and can? :create,  News %>	