<h1>Новости</h1>

<table>
  <tr>
    <th>Заголовок</th>
    <th>Добавил</th>
    <th>Текст</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @news.each do |news| %>
  <tr>
    <td><%= news.name %></td>
    <td><%= news.user %></td>
    <td><%= news.content %></td>
    <td><%= link_to 'Show', news %></td>
		<% if can? :update, news %>
    		<td><%= link_to 'Edit', edit_news_path(news) %></td>
    		<td><%= link_to 'Destroy', news, method: :delete, data: { confirm: 'Are you sure?' } %></td>
		<% end %>
  </tr>
<% end %>
</table>
