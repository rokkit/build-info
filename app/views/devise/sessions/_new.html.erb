<h2 class="block-title">Вход</h2>

<div class="content">
	<%= simple_form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f| %>
	  <div class="form-inputs">
	    <%= f.input :email, label: "Почта", :required => false, :autofocus => true, input_html: { maxlength: 50, class: 'textinput' } %>
	    <%= f.input :password, label: "Пароль", :required => false, input_html: { maxlength: 50, class: 'textinput' } %>
	    <%= f.input :remember_me,label: "Запомнить", :as => :boolean if devise_mapping.rememberable? %>
	  </div>

	  <div class="form-actions">
	    <%= f.button :submit, "Вход", :class => "entypo-login" %>
	  </div>
	<% end %>
	<%= render "devise/shared/links" %>
</div>