<% content_for :page_title do %>Изменить профиль<% end %>

<%= simple_form_for(resource, :as => resource_name, :url => registration_path(resource_name), :html => { :method => :put }) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :email, :required => true, :autofocus => true %>

    <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
      <p>Currently waiting confirmation for: <%= resource.unconfirmed_email %></p>
    <% end %>

    <%= f.input :password, label:"Новый пароль",:autocomplete => "off", :hint => "оставьте пустым, если не желаете сменить", :required => false %>
    <%= f.input :password_confirmation,label:"Подтверждение пароля", :required => false %>
    <%= f.input :current_password,label:"Старый пароль", :hint => "введите ваше текущий пароль", :required => true %>
  </div>

  <div class="form-actions">
    <%= f.button :submit, "Сохранить" %>
  </div>
<% end %>

<h3>Удаление аккаунта</h3>

<p><%= link_to "Удалить аккаунт", registration_path(resource_name), :data => { :confirm => "Are you sure?" }, :method => :delete %></p>

<%= link_to "Назад", :back %>
